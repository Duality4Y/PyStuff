black = (0,0,0);
red = (255,0,0);
green = (0,255,0);
blue = (0,0,255);

pygame.time.set_timer(USEREVENT+1, 20);

running = 1;
while running:
    for event in pygame.event.get():
        if event.type == QUIT:
            running = 0;
            pygame.quit();
            sys.exit();
    screen.lock();
    screen.fill(black);
    screen.unlock();
    pygame.display.flip();
