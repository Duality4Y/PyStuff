import wireframe
import pygame
import math

width, height = 400,300
background = (10,10,50)

screen = pygame.display.set_mode((width,height))
pygame.display.set_caption("wireframe display")

running = True;
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False;
    screen.fill(background);
    pygame.display.flip();